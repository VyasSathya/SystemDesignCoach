{
    "name": "system-design-coach",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "server": "cd server && npm run dev",
        "client": "cd client && npm run dev",
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "test": "jest --detectOpenHandles"
    },
    "devDependencies": {
        "@babel/core": "^7.26.10",
        "@babel/preset-env": "^7.26.9",
        "babel-jest": "^29.7.0",
        "concurrently": "^9.1.2"
    },
    "jest": {
        "testEnvironment": "node",
        "moduleDirectories": [
            "node_modules"
        ],
        "roots": [
            "<rootDir>/server"
        ],
        "modulePaths": [
            "<rootDir>/server"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/server/tests/jest.setup.js"
        ]
    },
    "dependencies": {
        "react-feather": "^2.0.10"
    }
}
